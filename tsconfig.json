{
  "compilerOptions": {
    "target": "ES6",
    "outDir": "./build/",
    "module": "CommonJS",
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": false,
    "noFallthroughCasesInSwitch": true,
    "esModuleInterop": true
  },
  "include": ["./**/*.ts"]
}
